<div class="container">
  <form>
    <div class="form-group">
      <label>キーワード</label>
      <input id="keyword" class="form-control">
    </div>
    <div class="form-group">
      <label>除外ワード</label>
      <input id="negative-match" class="form-control">
    </div>
    <div class="form-group">
      <label>カテゴリ</label>
      <select id="category" class="form-control">
        <option value="All">全て</option>
        <option value="Appaerl">アパレル</option>
        <option value="Baby">ベビー＆マタニティ</option>
        <option value="Beauty">コスメ</option>
        <option value="Books">本(和書)</option>
      </select>
    </div>
    <div class="checkbox">
      <label>
        <input id="is_prime" type="checkbox">Amazonプライム指定
      </label>
    </div>
  </form>

  <button type="submit" class="btn btn-primary">商品を検索</button>
</div>
