<div class="container">

  <ul class="list-inline">
    <li>
      <b>キーワード</b>
      <%= @search_info['keyword'] %>
    </li>
    <li>
      <b>除外ワード</b>
      <%= @search_info['negative_match'] %>
    </li>
    <li>
      <b>カテゴリ</b>
      <%= @search_info['category'] %>
    </li>
    <% if @search_info['is_prime'] == 1 then %>
    <li>
      <b>Amazonプライム指定あり</b>
    </li>
    <% end %>
  </ul>

  <div class="alert alert-info" role="alert">該当する商品は <b><%= @search_info['item_total'] %></b> 件あります。(csvダウンロードできるのは最大 <%= @search_info['max_export'] %> 件)</div>

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>商品名</th>
        <th>価格</th>
        <th>ブランド</th>
        <th>プライム</th>
      </tr>
    </thead>
    <tbody id="tbody">
      <% @items.each do |item| %>
      <tr>
        <td><a href="<%= item['url'] %>" target="_blank"><%= item['title'] %></a></td>
        <td><%= item['price'] %></td>
        <td><%= item['headline'] %></td>
        <td><% if item['is_prime'] == '1' %>◯<% end %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <nav>
    <ul class="pagination">
      <% pages = (1..@page['last_page']).to_a %>
      <% pages.each do |page| %>
      <li <% if page == @page['current_page'] then %>class="active"<% end %> value="<%= page %>">
        <a href="#">
          <%= page %>
        </a>
      </li>
      <% end %>
    </ul>
  </nav>

  <%= form_tag("/search_products/create", method: :post) do %>
  <div class="pull-right">
    <div class="form-group">
      <select name="label_id" class="form-control">
        <% @labels.each do |label| %>
        <option value="<%= label.id %>"><%= label.name %></option>
        <% end %>
      </select>
    </div>

    <input type="hidden" name="keyword" value="<%= @search_info['keyword'] %>">
    <input type="hidden" name="negative_match" value="<%= @search_info['negative_match'] %>">
    <input type="hidden" name="category" value="<%= @search_info['category'] %>">
    <input type="hidden" name="is_prime" value="<%= @search_info['is_prime'] %>">

    <%= submit_tag '上記ラベルで検索条件を保存', :class => "btn btn-primary" %>
  </div>
  <% end %>

</div>
