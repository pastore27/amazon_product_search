<h3>ラベル(出品者ID検索)一覧</h3>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>ラベル名</th>
      <th>削除</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @labels.each do |label| %>
    <tr>
      <td><%= label.name %></td>
      <td>
        <a href="/labels/<%= current_user.id %>/<%= label.id %>/delete" onclick="return confirm('本当に削除しますか？')">削除</a>
      </td>
      <td>
        <a href="/labels/<%= current_user.id %>/<%= label.id %>/search_conditions">
          <button class="btn btn-success">検索条件をみる</button>
        </a>
      </td>
      <td>
        <a href="/labels/<%= current_user.id %>/<%= label.id %>/items">
          <button class="btn btn-info">商品をみる</button>
        </a>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
